script#modify-tile(type='text/template')
        <h2>
        X: <%= x %>
        Y: <%= y %>
        </h2>
        <label>
        Elevation: <input type="text" class='js-add-elevation' placeholder='add an elevation - positive integer 1-10' value='<%= typeof elv !== "undefined" ? elv : 0 %>'/>
        </label>
        <label>
        Enterable Directions: <input type="text" class='js-add-dirs' placeholder='add directions' value='<%= typeof e !== "undefined" ? e : "" %>'/>
        </label>
        <label>
        Tile type: <input type="text" class='js-add-type' placeholder='add type' value='<%= typeof t !== "undefined" ? t : "e" %>'/>
        </label>

script#inventory-item(type='text/template')
        <%= name %> 
        <% if (equipped) { %> 
        span.js-item-equipped E 
        <% } %>

script#mapcreate-item(type='text/template')
        <%= typeof e !== 'undefined' && e ? e : '&nbsp;' %>
        <span class='elevation'><%= elv %></span>
        <span class='type'><%= t || "" %></span>